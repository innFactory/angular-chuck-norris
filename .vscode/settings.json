{
  // eslint
  "eslint.enable": true,
  "eslint.validate": ["javascript", "typescript", "html", "typescriptreact"],
  "eslint.lintTask.enable": true,
  "eslint.format.enable": true,

  //vscode
  "editor.formatOnSave": true,
